<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red_btn_bg_pressed_color"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Party"
            android:typeface="normal"
            android:textStyle="bold"
            android:textColor="@color/WhiteSmoke"
            android:textSize="22dp" />




    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"

            >



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:focusableInTouchMode="true"
                        android:layout_marginBottom="20dp"
                        >

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:hint="Name"
                            android:id="@+id/autoCompleteTextView1"
                            android:background="@drawable/bg_edittext_selector"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="15dp"
                            android:textSize="18sp"
                            />



                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/purpose"
                            app:ms_dropdown_max_height="250dp"
                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="30dp"
                            app:ms_text_color="@color/Black"
                            app:ms_background_color="@color/spinn"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:hint="Customer Type"

                            />


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ddnamedv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            >

                            <EditText
                                android:id="@+id/descddv"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Address"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="15dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edittext_selector"

                                />

                        </android.support.design.widget.TextInputLayout>



                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/state"
                            app:ms_dropdown_max_height="250dp"
                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp"
                            app:ms_text_color="@color/Black"
                            app:ms_background_color="@color/spinn"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:hint="State"

                            />



                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            >

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Phone Number"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="15dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edittext_selector"

                                />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            >

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Email Id"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="15dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edittext_selector"

                                />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

