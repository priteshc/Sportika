<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            android:text="PURCHASE"
            android:typeface="normal"
            android:textStyle="bold"
            android:textColor="@color/WhiteSmoke"
            android:textSize="22dp" />


    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"

            >



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:focusableInTouchMode="true"
                        android:layout_marginBottom="20dp"
                        >


                            <EditText
                                android:id="@+id/desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Name"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edit_text1"

                                />





                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Location"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edit_text1"

                                />



                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="date"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edit_text1"

                                />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Item"
                            android:background="@drawable/bg_edit_text1"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:padding="10dp"
                            android:id="@+id/add"
                            />




                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Total Amount"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edit_text1"

                                />




                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:layout_marginTop="15dp"
                             >


                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Paid Amount"
                                android:gravity="center"
                                android:maxLength="500"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:scrollbars="vertical"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:background="@drawable/bg_edit_text1"

                                />


                                 <EditText
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:inputType="numberDecimal"
                                     android:maxLines="3"
                                     android:focusableInTouchMode="true"
                                     android:hint="Balance"
                                     android:gravity="center"
                                     android:maxLength="500"
                                     android:layout_marginLeft="5dp"
                                     android:layout_marginRight="30dp"
                                     android:layout_weight="1"
                                     android:scrollbars="vertical"
                                     android:padding="10dp"
                                     android:textSize="18sp"
                                     android:background="@drawable/bg_edit_text1"

                                     />


                         </LinearLayout>


                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/state"
                            app:ms_dropdown_max_height="250dp"
                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            app:ms_text_color="@color/Black"
                            app:ms_background_color="@color/spinn"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/bg_edit_text1"
                            android:hint="Payment Type"
                            />


                            <EditText
                                android:id="@+id/descddv"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:focusableInTouchMode="true"
                                android:hint="Description"
                                android:gravity="left|top"
                                android:maxLength="500"
                                android:scrollbars="vertical"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:textSize="18sp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/bg_edit_text1"

                                />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/buttonshp2"
                            android:id="@+id/log"
                            />

                    </LinearLayout>

                </ScrollView>



        </LinearLayout>




    </RelativeLayout>






</RelativeLayout>

